<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.mytoysgroup.movies.challenge">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".MoviesApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      android:networkSecurityConfig="@xml/network_security_config">
    <activity
        android:name=".wishlist.WishlistActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".moviesearch.SearchMovieActivity"
        android:parentActivityName=".wishlist.WishlistActivity"
        android:windowSoftInputMode="stateVisible|adjustResize"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="de.mytoysgroup.movies.challenge.wishlist.WishlistActivity"/>
    </activity>
    <activity
        android:name=".detail.MovieDetailActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>